{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "description": "Disable automerge for all updates by default",
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": false
    },
    {
      "description": "Automerge vulnerability alerts (security patches)",
      "vulnerabilityAlerts": true,
      "automerge": true,
      "labels": ["security"]
    },
    {
      "description": "Automerge minor updates",
      "matchUpdateTypes": ["minor"],
      "automerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}